{% extends 'base.html.twig' %}

{% block body %}
    <h1>Auteur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Coupedecheveux</th>
                <td>{{ auteur.coupeDeCheveux }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('auteur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('auteur_edit', { 'id': auteur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
